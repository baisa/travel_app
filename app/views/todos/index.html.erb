<h1>All todos for the trip to <%= @trip.title %> </h1>

<table>
  <tr>
    <th>Task</th>
  </tr>
 
  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.task %></td>
      <td><%= link_to 'Destroy', [todo.trip, todo],
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<h3>Add New Task</h3>
<%= form_for [:trip, @todo] do |f| %>
  <p>
    <%= f.label :task %><br>
    <%= f.text_field :task %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Back', trips_path %>