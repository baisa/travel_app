<div class="col-md-6">
  <div style="width: 60%">
    <h3>Add new trip</h3>
    <%= bootstrap_form_for :trip, url: trips_path do |f| %>

        <%= f.text_field :title, hide_label: true, placeholder: "Trip's title..."  %>
        <%= f.text_area :description, hide_label: true, placeholder: "description..." %>
        <%= f.submit %>  
    <% end %>
    <br>
    <button class="btn btn-default"><%= link_to 'Back', trips_path %></button>
  </div>
</div>